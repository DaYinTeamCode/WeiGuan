<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    android:background="@drawable/bg_dialog_pushlish"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvVideo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/ic_page_pushlish_video"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:text="发视频"
            android:textColor="#999999"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/tvImage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/ic_page_pushlish_image"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:text="发图片"
            android:textColor="#999999"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/tvText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/ic_page_pushlish_text"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:text="发文字"
            android:textColor="#999999"
            android:textSize="12dp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/ivClose"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        android:scaleType="centerInside"
        android:src="@mipmap/ic_page_pushlish_close" />

</LinearLayout>